<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Student page</title>
</head>
<body>
  
    <br>
    <br>
    <h3>Welcome @ViewBag.UserName </h3>
<br><br>
    <!-- Text -->
    <div class="row">
        <div class="col-md-6">
            <p>Payment</p>
        </div>
    </div>

    <!-- Buttons -->
     <!-- Buttons -->
    <div class="row">
      
        <div class="col-md-1">
           <form class="form-inline" action="/Home/ChangeSubscribedOn">     
                <button type="submit" class="btn btn-default">Subscribe</button>
            </form> 
            
        </div>
        <div class="col-md-1">
            <form class="form-inline" action="/Home/ChangeSubscribedOff">     
                <button type="submit" class="btn btn-default">Unsubscribe</button>
            </form> 
        </div>
    </div>
    <br><br>

    <!-- Text -->
    <div class="row">
        <div class="col-md-6">
            <p>Message a mentor</p>
        </div>
    </div>

    <!-- Buttons -->
    <div class="row">
        <div class="col-md-6">
            <a href="/Home/GetMailStudent"><button type="button" class="btn btn-default">See Messages</button></a>
            <a href="/Home/SendMailStudent"><button type="button" class="btn btn-default">Send Message</button></a>
        </div>
    </div>
    <br><br>
   

    <h3>Find a mentor</h3>
    
    <div class="row">
        <div class="col-md-2">
            <select class="form-control">
               <option value="one">1. Klasse </option>
               <option value="two">2. Klasse</option>
               <option value="three">3. Klasse</option>
               <option value="four">4. Klasse</option>
               <option value="five">5. Klasse</option>
               <option value="five">6. Klasse</option>
               <option value="five">7. Klasse</option>
               <option value="five">8. Klasse</option>
               <option value="five">9. Klasse</option>
               <option value="five">10. Klasse</option>
               <option value="five">1.g</option>
               <option value="five">2.g</option>
               <option value="five">3.g</option>
            </select>
        </div>
        <div class="col-md-6">
            <form method="get" action="/Home/StudentPage">      
               <input type="text" name="id" placeholder="subject"/>
               <input type="submit"/>
            </form>
        </div>
       
    </div>
    



