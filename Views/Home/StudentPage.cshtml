<br><br>

        <table class="table table-striped">
          <tr>     
            <th>Pic</th>
            <th>Name</th> 
            <th>Description</th> 
            <th>Connect</th>         
          </tr>

        @foreach(var ment in @ViewBag.ment)        
        {
               // Check if mentor is online and if Mentor subject is the same as inputted subject
               // or if inputted subject is null (just show everybody)
            //  if(ment.Online == 1 && (@ment.Subjects == @ViewBag.subject || @ViewBag.subject == null)){ 
                if(ment.Online == 1){  
                string x=@ment.Imgurl;
                <tr>
                    <td><img src=@x alt="image" height="100" width="100"  onmouseover="" style="cursor: pointer;"/></td>
                    <td> @ment.Name</td>
                    <td> @ment.Subjects</td>
                    <td><a href="https://mentoronline.tuteeapp.com/111111111?admin=true&origin=localhost:5000&nick=MentorName">Connect with Mentor</a></td>
                
                </tr>
            }
        }
    </table>
<br><br>
    <!-- Profile -->
    <div class="row">
        <div class="col-md-6">
             <h3>Profile</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <!--  <form method = "get" action="/Home/Mentor"> 
              <input type="number" required="required" name="ID" placeholder="ID"/>
              <input type="submit"/>
          </form>-->
          <table class="table table-striped">
              <tr>
                <th>StudentId</th>
                <th>Email</th>
                <th>Name</th>
                <th>Password</th>
                <th>Payment Info</th> 
                <th>Role</th> 
                <th>Subscribed</th> 
              </tr>

              @foreach(var stud in @ViewBag.stud)        
              {
                if(stud.StudentId == @ViewBag.number)
                {
                  
                  <tr>
                    <td> @stud.StudentId </td>
                    <td> @stud.Email </td>
                    <td> @stud.Name </td>
                    <td> @stud.Password </td> 
                    <td> @stud.Paymentinfo </td> 
                    <td> @stud.Role </td> 
                    <td> @stud.Subscribed </td> 
                    
                  </tr>
                }
              }
         </table>
       </div>
    </div>


</body>
</html>